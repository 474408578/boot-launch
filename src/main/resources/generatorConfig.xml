<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MySQLTables" targetRuntime="MyBatis3">
        <!--内置的插件，注意配置文件内的内容是有顺序的-->
        <!--builder-->
        <plugin type="org.mybatis.generator.plugins.FluentBuilderMethodsPlugin" />
        <!--tosString-->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />
        <!--序列化-->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <!--分页-->
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin" />
        <!--context配置-->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://119.45.56.227:3306/testdb?useUnicodetrue&amp;characterEncoding=utf-8&amp;useSSL=false"
                        userId="root"
                        password="123456">
        </jdbcConnection>
        <!--目标项目，目标文件夹需要提前存在-->
        <javaModelGenerator targetPackage="com.xschen.boot.launch.generator.model"
                            targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.xschen.boot.launch.generator.mapper"
                         targetProject="./src/main/resources/generator">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!--混合配置（注解+xml）-->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.xschen.boot.launch.generator.mapper"
                             targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="article" domainObjectName="Article" >
            <generatedKey column="id" sqlStatement="SELECT LAST_INSERT_ID()" identity="true" />
        </table>

    </context>
</generatorConfiguration>